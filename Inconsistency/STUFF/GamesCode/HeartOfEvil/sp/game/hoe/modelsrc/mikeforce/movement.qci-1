
$weightlist upperbodyreplace "Bip01 Pelvis" 1.0
$weightlist HipsUpperbodyReplace "Bip01 Pelvis" 1.0 "Bip01 L Leg" 0.0 "Bip01 R Leg" 0.0 
$weightlist LegsReplace "Bip01" 1.0 "Bip01 Pelvis" 0.0 "Bip01 L Leg" 1.0 "Bip01 R Leg" 1.0 

// running, no weapon
$animation a_RunS RunS loop LX LY startloop 0 rotateto -180 fps 30 {
	alignto idle
	// ikrule lfoot footstep 0 range .. 9 12 ..
	// ikrule rfoot footstep 1 range .. 0 3 ..
	weightlist LegsReplace
}
