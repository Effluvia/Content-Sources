$animation a_aim_combat_neutral "Aim9DirectionsCombat" frame 4 4 weightlist HipsUpperbodyReplace
$animation a_aim_combat_down_right Aim9DirectionsCombat frame 0 0  weightlist HipsUpperbodyReplace
$animation a_aim_combat_down_center Aim9DirectionsCombat frame 1 1  weightlist HipsUpperbodyReplace
$animation a_aim_combat_down_left Aim9DirectionsCombat frame 2 2  weightlist HipsUpperbodyReplace
$animation a_aim_combat_mid_right Aim9DirectionsCombat frame 3 3  weightlist HipsUpperbodyReplace
$animation a_aim_combat_mid_center Aim9DirectionsCombat frame 4 4  weightlist HipsUpperbodyReplace
$animation a_aim_combat_mid_left Aim9DirectionsCombat frame 5 5  weightlist HipsUpperbodyReplace
$animation a_aim_combat_up_right Aim9DirectionsCombat frame 6 6  weightlist HipsUpperbodyReplace 
$animation a_aim_combat_up_center Aim9DirectionsCombat frame 7 7  weightlist HipsUpperbodyReplace
$animation a_aim_combat_up_left Aim9DirectionsCombat frame 8 8  weightlist HipsUpperbodyReplace
$animation a_aim_combat_straight_up AimUpCombat frame 0 0  weightlist HipsUpperbodyReplace

$sequence layer_Aim_combatidle  {
			a_aim_combat_straight_up a_aim_combat_straight_up a_aim_combat_straight_up
			a_aim_combat_up_right a_aim_combat_up_center a_aim_combat_up_left 
			a_aim_combat_mid_right a_aim_combat_mid_center a_aim_combat_mid_left 
			a_aim_combat_down_right a_aim_combat_down_center a_aim_combat_down_left 
			blendwidth 3 blend aim_yaw -45 45 blend aim_pitch -90 45 hidden
}

$animation a_combatidle_aim seq_combatidle_up weightlist LegsReplace
$sequence combatidle_aim a_combatidle_aim loop fps 10 {
	addlayer layer_Aim_combatidle
	activity ACT_IDLE_ANGRY 1
	node "standingAngry"
}

$sequence walk_aiming_all {
	a_runS a_runSE a_runE a_runNE a_runN a_runNW a_runW a_runSW a_runS
	blendwidth 9
	blend move_yaw -180 180
	addlayer layer_Aim_all
	activity ACT_WALK_AIM_RIFLE 1
	node "walking"
}

$sequence run_aiming_all {
	a_runS a_runSE a_runE a_runNE a_runN a_runNW a_runW a_runSW a_runS
	blendwidth 9
	blend move_yaw -180 180
	addlayer layer_Aim_all
	activity ACT_RUN_AIM_RIFLE 1
	node "running"
}

$sequence shootm16_aim a_combatidle_aim loop fps 30 {
	addlayer layer_Aim_combatidle
	activity ACT_RANGE_ATTACK_SMG1 1
	node "shooting"
}

$animation a_crouch_combatidle_aim seq_crouch_combatidle_up weightlist LegsReplace
$sequence crouch_shootm16_aim a_crouch_combatidle_aim loop fps 30 {
	addlayer layer_Aim_all
	activity ACT_RANGE_ATTACK_SMG1_LOW 1
	node "shootingCrouched"
}
$sequence crouch_combatidle_aim a_crouch_combatidle_aim loop fps 30 {
	addlayer layer_Aim_all
	activity ACT_IDLE_ANGRY_LOW 1
	node "crouchingAngry"
}

$sequence g_shootcolt1911a1 a_aim_neutral fps 20 {
	subtract g_shootcolt1911a1 0
	delta
//	hidden
	activity ACT_GESTURE_RANGE_ATTACK_SMG1 1
	node shooting
	weightlist HipsUpperbodyReplace
}

$sequence g_reload "seq_reload" fps 40 {
	{ event 3015 40 }
	activity ACT_GESTURE_RELOAD 1
	weightlist HipsUpperbodyReplace
}

