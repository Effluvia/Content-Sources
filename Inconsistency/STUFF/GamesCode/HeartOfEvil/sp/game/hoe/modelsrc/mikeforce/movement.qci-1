$sequence run_all {
	a_runS a_runSE a_runE a_runNE a_runN a_runNW a_runW a_runSW a_runS
	blendwidth 9 blend move_yaw -180 180 ACT_RUN 1 node "running"
}


$animation a_aim_neutral "Aim9Directions" frame 4 4 weightlist HipsUpperbodyReplace
$animation a_aim_down_right Aim9Directions frame 0 0  weightlist HipsUpperbodyReplace
$animation a_aim_down_center Aim9Directions frame 1 1  weightlist HipsUpperbodyReplace
$animation a_aim_down_left Aim9Directions frame 2 2  weightlist HipsUpperbodyReplace
$animation a_aim_mid_right Aim9Directions frame 3 3  weightlist HipsUpperbodyReplace
$animation a_aim_mid_center Aim9Directions frame 4 4  weightlist HipsUpperbodyReplace
$animation a_aim_mid_left Aim9Directions frame 5 5  weightlist HipsUpperbodyReplace
$animation a_aim_up_right Aim9Directions frame 6 6  weightlist HipsUpperbodyReplace 
$animation a_aim_up_center Aim9Directions frame 7 7  weightlist HipsUpperbodyReplace
$animation a_aim_up_left Aim9Directions frame 8 8  weightlist HipsUpperbodyReplace
$animation a_aim_straight_up AimUp frame 0 0  weightlist HipsUpperbodyReplace

$sequence aimup AimUp hidden

$sequence layer_Aim_all  {
			a_aim_straight_up a_aim_straight_up a_aim_straight_up
			a_aim_up_right a_aim_up_center a_aim_up_left 
			a_aim_mid_right a_aim_mid_center a_aim_mid_left 
			a_aim_down_right a_aim_down_center a_aim_down_left 
			blendwidth 3 blend aim_yaw -45 45 blend aim_pitch -90 45 hidden
}

